{
  "hooks": {
    "stop": "./stop-hook-validator.sh",
    "pre_task": "./feedback-system.sh analyze",
    "post_validation": "./feedback-system.sh guidance"
  },
  "projectName": "Enhanced Stop Hook Learning Project",
  "description": "Advanced todo-aware validation system with AI review and iterative feedback",
  "tools": {
    "bash": {
      "enabled": true
    },
    "edit": {
      "enabled": true
    },
    "read": {
      "enabled": true
    },
    "write": {
      "enabled": true
    },
    "todoWrite": {
      "enabled": true,
      "trackChanges": true
    }
  },
  "todoTracking": {
    "enabled": true,
    "snapshotOnValidation": true,
    "validateCompletionAccuracy": true,
    "requireGitMapping": true
  },
  "validation": {
    "enhanced": true,
    "successCriteria": [
      "Todo state validation passes",
      "Todo-git change mapping is accurate",
      "AI-powered review indicates completion",
      "All required files exist (HTML, CSS, JS, package.json)",
      "HTML structure is valid with required elements",
      "CSS styling is applied correctly", 
      "JavaScript functionality works (counter increment/reset)",
      "Functionality tests pass",
      "Structure tests pass"
    ],
    "commands": {
      "build": "npm run build",
      "test": "npm run test", 
      "lint": "npm run lint",
      "validate_todos": "./todo-validator.sh",
      "check_mapping": "./todo-git-mapper.sh map",
      "ai_review": "./ai-todo-reviewer.sh review"
    },
    "autoCommit": {
      "enabled": true,
      "onlyWhenAllCriteriaMet": true,
      "includeCoAuthor": true
    }
  },
  "feedback": {
    "iterativeEnabled": true,
    "trackProgress": true,
    "provideTrends": true,
    "escalateAfterIterations": 5
  },
  "aiIntegration": {
    "reviewEnabled": true,
    "fallbackValidation": true,
    "contextualFeedback": true
  }
}